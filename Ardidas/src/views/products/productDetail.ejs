<%- include("../partials/head.ejs") %>

<body>

  <!--ACA SE INCLUYE EL PARTIAL : HEADER -->
  <%- include("../partials/header.ejs") %>

    <main class="main-productDetail">
      <p class="secciones-productDetail"><a class="redirect-detalle" href="/">Inicio</a> > <a class="redirect-detalle" href="/products"> <%= product.Category_products.category %> </a>> Detalle > <%= product.name%></a></p>
      <article class="producto">
        <div class="div_img_chiquitas">
          <div class="imagen__chiquita_div" >
           
            <img src="/images/products/<%= product.Image_products[1] ? product.Image_products[1].filename : "default-image.png" %>" id="previewImage2"  alt="Vista previa de la imagen" style="width:100px;height:100px;border-radius: 10px" class="dashboard__image">
           
          </div>

          <div class="imagen__chiquita_div" >
           
            <img src="/images/products/<%= product.Image_products[2] ? product.Image_products[2].filename : "default-image.png" %>" id="previewImage3"  alt="Vista previa de la imagen" style="width:100px;height:100px;border-radius: 10px" class="dashboard__image">
        
          </div>

          <div class="imagen__chiquita_div" > 
            
            <img src="/images/products/<%= product.Image_products[3] ? product.Image_products[3].filename  : "default-image.png" %>" id="previewImage4"  alt="Vista previa de la imagen" style="width:100px;height:100px;border-radius: 10px" class="dashboard__image">
           
          </div> 
        </div>
        
        <img src="/images/products/<%= product.Image_products[0].filename %>" alt="imagen principal" class="imagen_grande">
        <div class="detalles">
          <h2><%= product.name%></h2>
          <h2>$<%= product.price %></h2>
          <div class="select-options-details-products">
            <a class="boton_promoBancaria" id="promoBancariaBoton"><p style="font-family:Helvetica-Neue;color:black;font-weight:bold;text-decoration:underline">Conocé nuestras promociones</p>
          </a>
          <br><br>
          <div class="detalles_talles">
            <p>Talles</p>
             <select name="sizes" id="" class="numero">
              <% product.Sizes.forEach(talles => { %>
                <option value=<%= talles.size %>><%= talles.size %></option>
              <% }) %>
            </select> 
          
          </div>
          <div class="detalles_cantidad">
            <p>Cantidad</p>
            <input type="number" class="numero" value="1">
          </div>
          <div class="detalles_color">
            <p>Color :</p>
            <h4><%= product.color%></h4>      
            </div>
          <a href="/products/carrito/<%= product.id%>">
          </div>
            <p class="main_carrito">Agregar al carrito</p>
          </a>
        </div>
      </article>
      <div class="detalles_div_descripcion">
        <h3>Descripción</h3>
        <p class="detalles_div_descripcion_p">
          <%= product.description %>
        </p>
      </div>
      <a href="/products">
        <p class="main_ver-todos-productos">VER TODOS LOS PRODUCTOS</p>
      </a>
      <%- include("../partials/whatsapp.ejs") %>
    </main>

<!--ACA SE INCLUYE EL PARTIAL : -->
<script src="/js/products/promocionesBancarias.js"></script>
<%- include("../partials/footer.ejs") %>


</body>

</html>