<!--ACA SE INCLUYE EL PARTIAL : HEAD -->
<%- include("../partials/head.ejs") %>

  <body class="update_body">

    <!--ACA SE INCLUYE EL PARTIAL : HEADER -->
    <%- include("../partials/header.ejs") %>


      <main>
        <h2 class="h2_title_form">EDITAR PRODUCTO</h2>
        <form action="/products/update/<%= product.id %>?_method=PUT" method="post" class="form_loadProduct">

          <section class="form__createProduct">
            <div class="img_update_fast">
              <input class="dashboard__image" name="image" type="file" accept="image/*" value="<%= product.imagen %>">
            </div>

            <div class="update_box_intern">
              <label for="nombre">Nombre :</label>
              <input type="text" name="nombre" id="nombre" value="<%= product.nombre %>" />

              <label for="precio">Precio :</label>
              <input type="number" name="precio" value="<%= product.precio %>" />

              <label for="category" >Categoría :</label>
              <select name="category" id="category" value="<%= product.category %>">
                <option value="oferta" <%=product.category == "oferta" ? "selected" : null %>>Oferta</option>
                <option value="destacado"  <%=product.category == "destacado" ? "selected" : null  %>>Destacado</option>
                <option value="lanzamiento" <%=product.category == "lanzamiento" ? "selected" : null  %>>Lanzamiento</option>
              </select>
              <div>
                <label for="descripcion">Descripción</label>
                <textarea name="descripcion" id="descripcion"><%=product.descripcion %></textarea>
              </div>
            </div>
            <div class="talles_update">
             
              <label>Talles :</label>
             
              <div>
                <input type="checkbox" name="talles" value="36" <%=product.talles.includes("36") ? "checked" : null %> id="talles">
                <label for="talles" >36</label>
              </div>
              <div>
                <input type="checkbox" name="talles" value="37" <%=product.talles.includes("37") ? "checked" : null %> id="talles">
                <label for="talles" >37</label>
              </div>
              <div>
                <input type="checkbox" name="talles" value="38" <%=product.talles.includes("38") ? "checked" : null %> id="talles">
                <label for="talles" >38</label>
              </div>
              <div>
                <input type="checkbox" name="talles" value="39" <%=product.talles.includes("39") ? "checked" : null %> id="talles" >
                <label for="talles" >39</label>
              </div>
              <div>
                <input type="checkbox" name="talles" value="40" <%=product.talles.includes("40") ? "checked" : null %> id="talles">
                <label for="talles" >40</label>
              </div>
              <div>
                <input type="checkbox" name="talles" value="41" <%=product.talles.includes("41") ? "checked" : null %> id="talles">
                <label for="talles" >41</label>
              </div>            
              <div>
                <input type="checkbox" name="talles" value="42" <%=product.talles.includes("42") ? "checked" : null %> id="talles">
                <label for="talles" >42</label>
              </div>
              
              </div>

              <div class="input_colores_create">
                <label>Colores disponibles :</label>
             
                <div>
                  <input type="checkbox" name="color" value="Negro" <%=product.color.includes("Negro") ? "checked" : null %> id="color">
                  <label for="color" >Negro</label>
                </div>
              
                <div>
                  <input type="checkbox" name="color" value="Blanco" <%=product.color.includes("Blanco") ? "checked" : null %> id="color">
                  <label for="color" >Blanco</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Gris" <%=product.color.includes("Gris") ? "checked" : null %> id="color">
                  <label for="color" >Gris</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Rosa" <%=product.color.includes("Rosa") ? "checked" : null %> id="color">
                  <label for="color" >Rosa</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Azul" <%=product.color.includes("Azul") ? "checked" : null %> id="color">
                  <label for="color" >Azul</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Beige" <%=product.color.includes("Beige") ? "checked" : null %> id="color">
                  <label for="color" >Beige</label>
                </div>

              </div>

            </div>
          
          </section>
        <button class="main_ver-todos-productos" type="submit">ACTUALIZAR PRODUCTO</button>      
        </form>
      
      </main>

      <!--ACA SE INCLUYE EL PARTIAL : -->
      <%- include("../partials/footer.ejs") %>
  </body>
  </html>