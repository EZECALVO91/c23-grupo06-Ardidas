<!--ACA SE INCLUYE EL PARTIAL : HEAD -->
<%- include("../partials/head.ejs") %>

  <body class="update_body">

    <!--ACA SE INCLUYE EL PARTIAL : HEADER -->
    <%- include("../partials/header.ejs") %>
    <p>Inicio > Productos > Detalle ><%= product.nombre%></p>

      <main class="main_update">

        <form action="/products/update/<%= product.id %>?_method=PUT" method="post" class="main__form__register">

          <section class="producto update_section-box">


            <div class="img_update_fast">

              <input class="dashboard__image" name="image" type="file" accept="image/*" value="<%= product.imagen %>">

            </div>

            <div class=" update_box_intern">
              <label for="nombre">Nombre :</label>
              <input type="text" name="nombre" id="nombre" value="<%= product.nombre %>" />

              <label for="precio">Precio :</label>
              <input type="number" name="precio" value="<%= product.precio %>" />

              <label for="category" >Categoría:</label>
              <select name="category" id="category" value="<%= product.category %>">
                <option value=""<%= product.category == "" ? "selected" : null  %>>Producto</option>
                <option value="oferta" <%=product.category == "oferta" ? "selected" : null %>>Oferta</option>
                <option value="destacado"  <%=product.category == "destacado" ? "selected" : null  %>>Destacado</option>
                <option value="lanzamiento" <%=product.category == "lanzamiento" ? "selected" : null  %>>Lanzamiento</option>
              </select>

              <div class="talles_update">
                <label>Talles :</label>
                <div>
                  <input type="checkbox" name="talles" value="37" id="talles"  >
                  <label for="talles" >37</label>
                </div>



                <div>
                  <input type="checkbox" name="talles" value="38" id="talles">
                  <label for="talles" >38</label>
                </div>


                <div>
                  <input type="checkbox" name="talles" value="39" id="talles">
                  <label for="talles" >39</label>
                </div>


                <div>
                  <input type="checkbox" name="talles" value="40" id="talles">
                  <label for="talles" >40</label>
                </div>

              </div>

          
              </div>
              <div>

                <label for="descripcion">Descripción</label>
                <textarea name="descripcion" id="descripcion" cols="25" rows="1"><%=product.descripcion %></textarea>

              </div>
              <div>
                <label>Colores disponibles :</label>
                <div>
                  <input type="checkbox" name="color" value="Negro" id="color">
                  <label for="color" >Negro</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Blanco" id="color">
                  <label for="color" >Blanco</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Gris" id="color">
                  <label for="color" >Gris</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Rosa" id="color">
                  <label for="color" >Rosa</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Azul" id="color">
                  <label for="color" >Azul</label>
                </div>

                <div>
                  <input type="checkbox" name="color" value="Beige" id="color">
                  <label for="color" >Beige</label>
                </div>

              </div>

            </div>
          
          </section>
        <button class="main_ver-todos-productos" type="submit">ACTUALIZAR PRODUCTO</button>      
        </form>
      
      </main>

      <!--ACA SE INCLUYE EL PARTIAL : -->
      <%- include("../partials/footer.ejs") %>
  </body>
  </html>