      <a href="/ayuda" id="button-ayuda-productCart">AYUDA</a>
    </header>


      <!-- % if (productInfo) { %> -->
        <main class="productCart-main">
      <div class="productCart-main-div-promo select-options-details-products">
        <a class="boton_promoBancaria" id="promoBancariaBoton" style="margin:auto">
          <p style="font-family:Helvetica-Neue;color:#fcfce7;font-weight:bold;text-decoration:underline">Conocé nuestras promociones</p>
        </a>
      </div>
        <section class="productCart-main-section-principal" id="cart">
            <div class="productCart-main-section-principal-encabezado">
                <h3>PRODUCTO</h3><h3>PRECIO</h3>
            </div>
            <article class="productCart-main-section-principal-article">
                <div class="productCart-main-section-principal-article-div-1">
                    <img id="image_cart" src="/images/products/default-image.png" alt="zapatillas">
                </div>
                <div class="productCart-main-section-principal-article-div-2">
                    <p id="productCart-article-nombre">  </p>
                    <p id="productCart-article-precio">  </p>
                    <p id="productCart-article-color">Color: </p>
                    <p id="productCart-article-talle">Talle:</p>
                    <a id="productCart-article-borrar"><i class="fa-solid fa-trash-can"></i></a>
                    <input type="number" name="cantidad" id="productCart-article-cantidad" value="1">
                </div>
            </article>
        </section>
      <section class="productCart-main-section-secundario">
        <p class="productCart-main-section-secundario-resumen">Resumen de compra</p>      
        <div class="productCart-main-section-secundario-div-1">
        <p id="productCart-section-secundario-text-total">Total</p>
        <p id="productCart-precio-total"></p>
      </div>
      <div class="productCart-main-section-secundario-div-2">
        <button id="button-pagar-productCart">PAGAR</button>
        <a href="/"><button id="button-seguir-comprando-productCart">SEGUIR COMPRANDO</button></a>
      </section>
    </div>
