<body class="body_home">

<!--ACA SE INCLUYE EL PARTIAL : HEADER -->
<%- include("../partials/header.ejs") %>

<main class="productos">
  <section class="carrusel_home">
    <div id="carouselExample" class="carousel slide">
<div class="carousel-inner">
            <div class="carousel-item active d-item">
              <img
                src="/images/banners/banner5.jpg"
                class="d-block w-100 d-img"
                alt="Zapatillas Nike"
              />
            </div>
            <div class="carousel-item d-item">
              <img
                src="/images/banners/banner1.png"
                class="d-block w-100 d-img"
                alt="imagen zapatilla"
              />
            </div>
            <div class="carousel-item d-item">
              <img
              src="/images/banners/banner2.jpg"
                class="d-block w-100 d-img"
                alt="imagen zapatilla"
              />
            </div>
            <div class="carousel-item d-item">
              <img
                src="/images/banners/banner4.jpg"
                class="d-block w-100 d-img"
                alt="imagen zapatilla"
              />
            </div>
            <div class="carousel-item d-item">
              <img
                src="/images/banners/banner3.jpg"
                class="d-block w-100 d-img"
                alt="imagen zapatilla"
              />
            </div>
          </div>
          <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExample"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExample"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>
</main>

      <div class="main_title_box">
        <hr class="hr_txt" />
        <h2 id="productos_home">PRODUCTOS</h2>
        <hr class="hr_txt" />
      </div>

      <section class="contenedor-productos1 section_products_main_index">
        <% products.forEach((product) => { %>
                  <article class="articulos">
          <a href="../products/detalle/<%= product.id%>"><img src="/images/products/<%= product.Image_products[0].filename %>" alt="<%= product.Image_products[0].filename %>" /></a>
          <div class="product-texto">
            <div class="main_descuento_precio_articulo">
              <p class="precio">$<%=product.price%></p>
            </div>
            <p class="modelo"><%=product.name%></p>
            <button><a href="/products/detalle/<%= product.id%>">SUMAR AL CARRITO</a></button>
          </div>
        </article>
          <% }); %>
      </section>

      <%- include("../partials/whatsapp.ejs") %>
      
    <section>
      <nav>
          <ul class="pagination">
              <% if (currentPage > 1) { %>
              <li>
                  <a href="?page=<%= currentPage - 1 %>">Anterior</a>
              </li>
              <% } %>
              <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="<%= i === currentPage ? 'active' : '' %>">
                  <a href="?page=<%= i %>"><%= i %></a>
              </li>
              <% } %>
              <% if (currentPage < totalPages) { %>
              <li>
                  <a href="?page=<%= currentPage + 1 %>">Siguiente</a>
              </li>
              <% } %>
          </ul>
      </nav>
  </section>
  
    
    </main>
    <script src="/js/index.js"></script>

<!--ACA SE INCLUYE EL PARTIAL : -->
<%- include("../partials/footer.ejs") %>

</body>

</html>