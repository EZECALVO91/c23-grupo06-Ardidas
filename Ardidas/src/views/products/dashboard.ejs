<%- include("../partials/head.ejs") %>
<body>
<%- include("../partials/header.ejs") %>

<main>
    <a href="/products/create"><button>Crear Producto</button></a>
    <section class="contenedor-productos1 section_products_main_index">
        <% products.forEach(element => { %>
            <article class="articulos">
                <a href="../products/detalle"><img src="/images/<%= element.imagen %>" alt="Zapatillas Nike" /></a>
                <div class="product-texto">
                  <div class="main_descuento_precio_articulo">
                    <p class="precio">$<%= element.precio %></p>
                  </div>
                  <p class="modelo"><%= element.nombre %></p>
                </div>
                <div class="contenedor-botones-dashboard">
                  <a
                    class="home__main__products__product__photo-container--more"
                    href="/products/detail/<%= element.id %>"
                    ><i class="fa-brands fa-readme"></i></a
                  >
                  <a class="home__main__products__product__photo-container--more"
                  href="/products/update/<%= element.id %>"
                    ><i class="fa-solid fa-pen-to-square"></i>
                  </a>
                  <a class="home__main__products__product__photo-container--more"
                  href="/products/delete/<%= element.id %>"
                    ><i class="fa-solid fa-trash"></i>
                  </a>
                </div>
              </article>
        <% }) %>
        
        
    

</main>
<%- include("../partials/footer.ejs") %>
</body>
</html>