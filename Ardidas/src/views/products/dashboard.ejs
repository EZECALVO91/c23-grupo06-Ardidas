<%-include("../partials/head.ejs")%>

<body>

  <%-include("../partials/header.ejs")%>

<main>
    <div class="box_redirect_create">

      <a class="btn_redirect_create" href="/products/create">Crear Producto</a>
    
    </div>

  <section class="contenedor-productos1 section_products_main_index">
        
        <% products.forEach(element => { %>
            
            <article class="articulos">
              <img src="/images/<%= element.imagen %>" alt="Zapatillas Nike" />
                <div class="">
                  <div class="main_descuento_precio_articulo">
                    <p class="precio">$<%= element.precio %></p>
                  </div>
                  <p class="modelo"><%= element.nombre %></p>
                </div>
                
                
                <div class="box_dashboard_option">
                  <a class="icon_edit_dashboard" href="/products/detalle/<%= element.id %>"
                  ><i class="fa-regular fa-address-book"></i>
                  </a>
                  
                  <a class="icon_edit_dashboard" href="/products/update/<%= element.id %>"
                  ><i class="fa-solid fa-highlighter"></i>
                  </a>

                  <form action="/products/delete/<%= element.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                    <button type="submit" class="action-button delete">ELIMINAR</button>
                  </form>

                  <i class="fa-regular fa-trash-can"></i>
                  
                  <!-- <form action="/products/delete/?_method=DELETE" method="POST" style="display: inline-flex">
                    <a type="submit" class="icon_edit_dashboard"><i class="fa-regular fa-trash-can"></i></a>
                  </form> -->



                  <!-- <a class="icon_edit_dashboard" href="/products/delete/"><i class="fa-regular fa-trash-can"></i>
                  </a>
                  </div> -->

                </div>
            </article>
        <% }) %>

</main>
<%- include("../partials/footer.ejs") %>
</body>
</html>