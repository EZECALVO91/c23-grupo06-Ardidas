<!--ACA SE INCLUYE EL PARTIAL : HEAD -->
<%- include("../partials/head.ejs") %>

  <body class="body_home">

    <!--ACA SE INCLUYE EL PARTIAL : HEADER -->
    <%- include("../partials/header.ejs") %>

      <main class="main__form main__userUpdate">

        <div class="main__title__box">
          <hr class="main__form__lines">
          <h2 class="main__form__title">USUARIO</h2>
          <hr class="main__form__lines">
        </div>

        <form action="/users/update/<%= user.id %>?_method=PUT" method="post" class="main__form__register"
          enctype="multipart/form-data">
          <label for="name">NOMBRE Y APELLIDO:</label>
          <input type="text" name="name" id="name" value="<%= user.name %>" />
          <small class="nameError">
            <%= locals.errores && errores.name ? errores.name.msg : null %>
          </small>

          <label for="email">EMAIL:</label>
          <input type="email" name="email" id="email" value="<%= user.email %>" />
          <small class="emailError">
            <%= locals.errores && errores.email ? errores.email.msg : null %>
          </small>

          <label for="password">CONTRASEÃ‘A:</label>
          <div class="main__form__register__password">
            <input type="password" name="password" class="main__form__register__password" value="<%= user.password %>"
              disabled />
            <small class="passwordError">
              <%= locals.errores && errores.password ? errores.password.msg : null %>
            </small>
            <i class="fa-regular fa-eye"></i>
          </div>

          <label for="date">FECHA DE NACIMIENTO: </label>
          <input type="date" name="date" value="<%= user.date %>" disabled />
          <small class="errores_validacion_profile">
            <%= locals.errores && errores.date ? errores.date.msg : null %>
          </small>

          <label for="locality">LOCALIDAD: </label>
          <input type="TEXT" name="locality" value="<%= user.locality %>" disabled />
          <small class="errores_validacion_profile">
            <%= locals.errores && errores.locality ? errores.locality.msg : null %>
          </small>

          <label for="aboutMe">SOBRE MI: </label>
          <textarea name="aboutMe" id="aboutMe" cols="30" rows="10" disabled><%= user.aboutMe %></textarea>
          <small class="errores_validacion_profile">
            <%= locals.errores && errores.aboutMe ? errores.aboutMe.msg : null %>
          </small>

          <div>
            <label for="category">CATEGORIA:</label>
            <select name="id_category" id="id_category" <%=user.id_category %>>
              <option value=2 <%=user.id_category==2 ? "selected" : null %> >USUARIO</option>
              <option value=1 <%=user.id_category==1 ? "selected" : null %>>ADMIN</option>
            </select>
          </div>

          <label for="image">CAMBIO DE AVATAR: </label>
          <input type="file" name="image" id="image" accept="image/*" value="<%= user.image %>" disabled>
          <small class="imageError">
            <%= locals.errores && errores.image ? errores.image.msg : null %>
          </small>

          <div class="container_avatar_img">
            <h3 class="main__form__title">AVATAR: </h3>
            <img class="img_avatar" src="/images/users/<%= user.image %>" alt="imagen principal">
          </div>

          <div class="main__form__register__box">
            <button class="main__form__button" type="">CONFIRMAR</button>
          </div>

        </form>
      </main>
      <script src="/js/users/validationDashUpdateUser.js"></script>

      <!--ACA SE INCLUYE EL PARTIAL : -->
      <%- include("../partials/footer.ejs") %>


  </body>

  </html>