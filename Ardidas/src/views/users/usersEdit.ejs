<!--ACA SE INCLUYE EL PARTIAL : HEAD -->
<%- include("../partials/head.ejs") %>

<body class="body_home">

  <!--ACA SE INCLUYE EL PARTIAL : HEADER -->
  <%- include("../partials/header.ejs") %>

    <main class="main__form main__userUpdate">

      <div class="main__title__box">
        <hr class="main__form__lines">
        <h2 class="main__form__title">USUARIO</h2>
        <hr class="main__form__lines">
      </div>

      <form action="/users/update/<%= user.id %>?_method=PUT" method="post" class="main__form__register" enctype="multipart/form-data">
        <label for="name">NOMBRE Y APELLIDO:</label>
        <input type="text" name="name"  id="name" value="<%= user.name %>"/>
        <p class="errores_validacion_userUpdate"> <%= locals.errores && errores.name ? errores.name.msg : null %> </p>

        <label for="email">EMAIL:</label>
        <input type="email" name="email"  value="<%= user.email %>"/>
        <p class="errores_validacion_userUpdate"> <%= locals.errores && errores.email ? errores.email.msg : null %> </p>

        <label for="password">CONTRASEÃ‘A:</label>
        <div class="main__form__register__password">
        <input type="password" name="password" class="main__form__register__password" value="<%= user.password %>" disabled/>
        <p class="errores_validacion_userUpdate"> <%= locals.errores && errores.password ? errores.password.msg : null %> </p>
        <i class="fa-regular fa-eye"></i>
        </div>

        <label for="date">FECHA DE NACIMIENTO: </label>
        <input type="date" name="date"  value="<%= user.date %>" disabled/>
        <p class="errores_validacion_profile"> <%= locals.errores && errores.date ? errores.date.msg : null %> </p>

        <label for="locality">LOCALIDAD: </label>
        <input type="TEXT" name="locality"  value="<%= user.locality %>" disabled/>
        <p class="errores_validacion_profile"> <%= locals.errores && errores.locality ? errores.locality.msg : null %> </p>

        <label for="aboutMe">SOBRE MI: </label>
        <textarea name="aboutMe" id="aboutMe" cols="30" rows="10" disabled><%= user.aboutMe %></textarea>
        <p class="errores_validacion_profile"> <%= locals.errores && errores.aboutMe ? errores.aboutMe.msg : null %> </p>

        <div>
          <label for="category" >CATEGORIA:</label>
            <select name="id_category" id="id_category" <%= user.id_category %>>
              <option value=2  <%=user.id_category == 2 ? "selected" : null %> >USUARIO</option>
              <option value=1  <%=user.id_category == 1 ? "selected" : null %>>ADMIN</option>
            </select>
        </div>

        <label for="image">CAMBIO DE AVATAR: </label>
        <input type="file" name="image" id="image" accept="image/*" value="<%= user.image %>">
        <p class="errores_validacion_userUpdate"> <%= locals.errores && errores.image ? errores.image.msg : null %> </p>
        
          
          <div class="container_avatar_img">
            <h3 class="main__form__title">AVATAR: </h3>
              <img class="img_avatar" src="/images/users/<%= user.image %>" alt="imagen principal"  >
          </div>

        <div class="main__form__register__box">
          <button class="main__form__button" type="">CONFIRMAR</button>
        </div>
        
      </form>
    </main>

<!--ACA SE INCLUYE EL PARTIAL : -->
<%- include("../partials/footer.ejs") %>


</body>

</html>